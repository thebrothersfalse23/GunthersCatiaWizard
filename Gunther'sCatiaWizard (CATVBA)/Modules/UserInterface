        With lblInstrHead
            .Caption = "Instructions:"
            .Left = PAD
            .Top = ctrlTop
            .Width = w
            .Height = 15
            .TextAlign = fmTextAlignLeft
            .Font.Bold = True
            .Font.Size = 12
        End With
        ctrlTop = ctrlTop + lblInstrHead.Height + 4
        
        ' Instructions list (left, wrapped)
